package edu.kh.servlet;

import java.io.IOException;

import javax.servlet.ServletException;
import javax.servlet.http.HttpServlet;
import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;

//Servlet클래스를 만들 때는 
//반드시 HttpServlet상속 받아야한다.
public class ServletEx2 extends HttpServlet{
	
	//상속이니 오버라이드를 해야한다. 
	//Get방식 요청을 처리하는(do)메소드
	@Override
	protected void doGet(HttpServletRequest req, HttpServletResponse resp) throws ServletException, IOException {
		
		//파라미터(Parameter) ==요청 시 전달된 input태그값
		String orderer = req.getParameter("orderer");
		
		//-> getParameter()는 전달된 input태그의 name이 하나일 때 만 가능하다.
		
		//같은 name이 여러 개면 String[]로 반환 하는
		// 	getParameterValues()를 사용
		
		String[] coffee = req.getParameterValues("coffee");
	}

}
